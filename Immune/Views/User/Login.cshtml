@model Immune.Models.UserDetails

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center">
                <a class="text-light btn btn-primary font-weight-bold" asp-action="SignUp" asp-controller="User">SignUp Form</a>
            </div>
            <form method="post" asp-action="Login">
               
                <div class="form-group">
                    <label asp-for="UserEmail"></label>
                    <input type="email" asp-for="UserEmail" placeholder="" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="password"></label>
                    <input id="password" type="password" asp-for="password" placeholder="" class="form-control" autocomplete="off" />
                    <i class="fa fa-eye" ></i>
                </div>
                
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-primary mb-2 " value="Log In"/>
                </div>
            </form>
        </div>
    </div>
</div>