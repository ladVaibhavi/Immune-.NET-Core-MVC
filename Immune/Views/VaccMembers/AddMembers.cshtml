@model Immune.Models.VaccMembers
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "AddMembers";
}

<h1>AddMembers</h1>

<h4>VaccMembers</h4>
<hr />
<p>
    @HttpContextAccessor.HttpContext.Session.GetInt32("UserId")
</p>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddMembers" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input type="date" asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <select class="form-select temp" onchange="bookSlot()" name="City" asp-items="@ViewBag.city">
                    <option value="0" selected>Default</option>
                </select>
            </div>
            
            <div class="form-group">
                <input asp-for="uId" class="form-control" type="hidden" value="@HttpContextAccessor.HttpContext.Session.GetInt32("UserId")" />
                <span asp-validation-for="uId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.msg");
        };
    </script>
}




